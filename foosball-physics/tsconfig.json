{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": ["dom", "es2015"],
		"declaration": true,
		"sourceMap": true,
		"declarationDir": "./dist",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"noImplicitAny": false,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}